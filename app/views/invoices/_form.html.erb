<div class="row">
  <div class="col-md-12">

    <%= simple_form_for @invoice, defaults: {input_html:{class: 'form-inline'}} do |f| %>
      <div class="customer ">
        <%= f.input :customer_id, collection: Customer.all.collect {|d| [d.name, d.id] }  %>
      </div>

    <div class="form-group line1">
    <div class="row">
      <div class="hidden-phone col-sm-1 col-md-1 col-lg-1 bold">#</div>
      <div class="hidden-phone col-sm-3 col-md-3 col-lg-3 bold"> Producto</div>
      <div class="hidden-phone col-sm-2 col-md-2 col-lg-2"> Cantidad</div>
      <div class="hidden-phone col-sm-1 col-md-1 col-lg-1"> Bulto</div>
      <div class="hidden-phone col-sm-2 col-md-2 col-lg-2"> Precio U.</div>
      <div class="hidden-phone col-sm-2 col-md-2 col-lg-3"> Precio T.</div>
    </div>

      <%= f.fields_for :orders, method: 'get' do |ph| %>


        <%=render 'orders', f: ph  %>
      <% end %>

      <%= link_to_add_fields 'Agregar  Producto' , f , :orders, class: "add_fields col-md-12" %>

      <%= render "total", f: f %>

      <div class="form-actions col-md-12">
        <%= f.button :submit , class: 'btn btn-primary' , data: {disable_with: "Enviando"} %>
      </div>
    </div>
  </div>
    <% end %>
  </div>
</div>

