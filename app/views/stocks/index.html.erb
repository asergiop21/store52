<h1>Listado Stock</h1>

<table class="table">
  <thead>
    <tr>
      <th>Article</th>
      <th>Quantity</th>
      <th>Price cost</th>
      <th>Supplier</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @stocks.each do |stock| %>
      <tr>
        <td><%= stock.article_id %></td>
        <td><%= stock.quantity %></td>
        <td><%= stock.price_cost %></td>
        <td><%= stock.supplier_id %></td>
        <td><%= link_to 'Show', stock %></td>
        <td><%= link_to 'Edit', edit_stock_path(stock) %></td>
        <td><%= link_to 'Destroy', stock, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Stock', new_stock_path %>
