<div class="row">
  <div class="col-md-12">

    <%= simple_form_for @invoice_stock , defaults: {input_html:{class: 'form-inline'}} do |f| %>
      <%= f.input :name, label: 'Nombre', input_html: {class: 'form-control'} %> 
      <%= f.input :supplier_idis, as: :hidden %>
      <%= f.input :supplier_name, as: :autocomplete, label: false,
        placeholder: 'Ingrese el Proveedor',
        url: autocomplete_supplier_name_articles_path,
        input_html: {'data-id-element' => '#invoice_stock_supplier_idis', class: 'form-control'},
        required: false
      %>
    <div class="form_group line3">

      <div class="hidden-phone col-sm-3 col-md-3 col-lg-3">Producto</div>
      <div class="hidden-phone col-sm-1 col-md-1 col-lg-1"> Cantidad</div>
      <div class="hidden-phone col-sm-1 col-md-1 col-lg-1"> Iva</div>
      <div class="hidden-phone col-sm-1 col-md-2 col-lg-2"> Cod. Barra</div>
      <div class="hidden-phone col-sm-2 col-md-2 col-lg-2"> Precio Costo</div>
      <div class="hidden-phone col-sm-2 col-md-2 col-lg-1"> Precio Subtotal</div>
      <div class="hidden-phone col-sm-1 col-md-1 col-lg-1"> Etiquetas</div>
      <div class="hidden-phone col-sm-1 col-md-1 col-lg-1">Eliminar</div>

      <%= f.fields_for :stocks, method: 'get' do |ph| %>
        <%=render 'stocks', f: ph  %>
      <% end %>

      <div class="col-md-12">
        
      <%=link_to_add_fields 'Agregar Item', f , :stocks, class:"add_fields" %>

    <div class="actions">
      <%= f.submit "Guardar", class: 'btn btn-primary'  %>
    </div>
      </div>
   

    
    </div>


  <% end %>
  </div>
</div>
