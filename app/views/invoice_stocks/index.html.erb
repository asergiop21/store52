  <div class="col-md-12"> 
  <div class="form-group">
    <div class="col-md-2 sidebar">
      <%= render :partial => 'invoices/filters_bar' %>
    
    </div>
    <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
        <div class="col-md-8 customer">

<h2>Stock </h2>

  <%= will_paginate @invoices %>
<table class="table">
  <thead>
    <tr>
      <th>Fecha</th>
      <th>Nombre</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @invoice_stocks.each do |invoice_stock| %>
      <tr>
        <td><%= l invoice_stock.created_at, format: :long %></td>
        <td><%= invoice_stock.name %></td>
        <td><%= link_to 'Editar', edit_invoice_stock_path(invoice_stock) %></td>
        <td><%= link_to 'Destroy', invoice_stock, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to 'imprimir', invoice_stock_path(invoice_stock, format: 'csv')%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo Remito', new_invoice_stock_path %>

</div>                
</div>                
</div>                
</div>                

